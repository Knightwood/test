<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="numberPicker">
        <!--中间的文本是否可编辑-->
        <attr name="editable" format="boolean" />
        <!--最大最小数值,以及没想好干什么用的限制值,限制值在最大和最小值之间-->
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <!--加减按钮的宽度-->
        <attr name="buttonWidth" format="dimension" />
        <!--编辑文本的宽度-->
        <attr name="editextWidth" format="dimension" />
        <!--加减和中间文本字体的大小-->
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <!--layout的背景-->
        <attr name="backgroud" format="reference" />
        <!--layout分割线drawable-->
        <attr name="individer" format="reference" />
        <attr name="addBackground" format="reference" />
        <attr name="subBackground" format="reference" />
    </declare-styleable>


    <declare-styleable name="StarMenu">
        <attr name="position" />
        <attr name="radius" />
    </declare-styleable>


    <declare-styleable name="ArcMenu">
        <attr name="ArcPosition" />
        <attr name="radius" />
    </declare-styleable>

    <attr name="ArcPosition">
        <enum name="left" value="0"/>
        <enum name="right" value="1"/>
    </attr>

    <attr name="position">
        <enum name="left_top" value="0" />
        <enum name="right_top" value="1" />
        <enum name="right_bottom" value="2" />
        <enum name="left_bottom" value="3" />
    </attr>
    <attr name="radius" format="dimension" />
</resources>