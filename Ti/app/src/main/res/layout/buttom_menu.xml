<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <EditText
        android:id="@+id/search_edittext"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.8"
        android:background="#F4F6F2F2"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:onClick="searchBar"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textColorHighlight="#FFD54F"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mult_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:focusableInTouchMode="false"-->
    <ImageView
        android:id="@+id/mult_button"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:background="@drawable/touch_color"
        android:onClick="mult_dialog"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_button"
        app:layout_constraintStart_toEndOf="@+id/search_edittext"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mult" />

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1"
        android:background="@drawable/touch_color"
        android:onClick="buttomMenu"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mult_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morevert" />
</androidx.constraintlayout.widget.ConstraintLayout>