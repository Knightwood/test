<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        app:defaultValue="false"
        app:key="home_page"
        app:title="自定义主页"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        app:dependency="home_page"
        app:key="homepage_url"
        app:summary=""
        app:title="主页网址"
        app:useSimpleSummaryProvider="true"/>

    <Preference
        app:fragment="com.example.kiylx.ti.settingFolders.SearchEngineSetting_Fragment"
        app:key="search_engine"
        app:title="设置搜索引擎" />
    <ListPreference
        app:entries="@array/explorer_flags"
        app:entryValues="@array/explorer_flags_values"
        app:useSimpleSummaryProvider="true"
        app:key="explorer_flags"
        app:title="浏览器标识" />
    <Preference
        app:title="清除数据"
        app:key="clearData"/>
    <CheckBoxPreference
        app:key="resumeData"
        app:title="启动时恢复标签页"
        app:defaultValue="false"/>
    <ListPreference
        app:key="textZoomlist"
        app:title="字体缩放"
        app:entries="@array/text_zoom"
        app:entryValues="@array/text_zoom_value"
        app:useSimpleSummaryProvider="true"/>
    <CheckBoxPreference
        android:key="downloadTools"
        android:title="是否使用内置下载器"
        android:summary="建议不要开启"
        android:defaultValue="false"/>

</PreferenceScreen>